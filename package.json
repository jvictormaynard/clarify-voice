{
  "name": "clarify-voice",
  "version": "1.0.0",
  "description": "Desktop voice transcription app with Gemini AI",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc && electron-builder",
    "build:linux": "tsc && electron-builder --linux",
    "build:win": "tsc && electron-builder --win",
    "build:mac": "tsc && electron-builder --mac",
    "typecheck": "tsc --noEmit"
  },
  "build": {
    "appId": "com.clarifyvoice.app",
    "productName": "ClarifyVoice",
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "extraResources": [
        "extra/**"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.utilities"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "package.json"
    ],
    "extraResources": [
      ".env"
    ],
    "directories": {
      "output": "release"
    }
  },
  "keywords": [
    "voice",
    "transcription",
    "gemini",
    "ai",
    "electron"
  ],
  "author": "ClarifyVoice",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.37.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3"
  }
}
